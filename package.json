{
	"name": "ts-executor-web",
	"displayName": "ts-executor-web",
	"description": "Execute TypeScript code in the browser",
	"version": "0.0.1",
	"publisher": "robertjndw",
	"private": true,
	"license": "MIT",
	"repository": "https://github.com/robertjndw/ts-executor-web",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:typescript",
		"onLanguage:javascript"
	],
	"browser": "./dist/web/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ts-executor-web.runCode",
				"title": "Run TypeScript Code",
				"icon": "$(play)"
			}
		],
		"menus": {
			"editor/title/run": [
				{
					"when": "editorLangId == javascript || editorLangId == typescript",
					"command": "ts-executor-web.runCode",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
		"pretest": "npm run compile-web",
		"vscode:prepublish": "npm run package-web",
		"compile-web": "webpack",
		"watch-web": "webpack --watch",
		"package-web": "webpack --mode production --devtool hidden-source-map",
		"package": "vsce package",
		"lint": "eslint"
	},
	"dependencies": {
		"esbuild-wasm": "^0.24.2",
		"typescript": "^5.7.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^9.0.0",
		"@types/vscode": "^1.73.0",
		"@types/webpack-env": "^1.16.2",
		"@vscode/test-web": "^0.0.22",
		"@vscode/vsce": "^3.2.2",
		"assert": "^2.0.0",
		"eslint": "^9.13.0",
		"mocha": "^9.2.0",
		"process": "^0.11.10",
		"ts-loader": "^9.2.5",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.11.0",
		"webpack": "^5.95.0",
		"webpack-cli": "^4.8.0"
	}
}
